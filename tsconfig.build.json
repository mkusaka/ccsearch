{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "src/cli.ts",
    "src/cli-server-wrapper.ts",
    "src/index-npm.ts",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/client/**/*",
    "src/components/**/*",
    "src/server.ts",
    "src/routes/**/*",
    "src/server-*.ts",
    "src/cli-server.ts",
    "src/index.ts"
  ]
}
